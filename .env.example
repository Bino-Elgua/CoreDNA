# Core DNA v2 — Environment Configuration

# ========================================
# LLM PROVIDERS
# ========================================

# Google Gemini (Primary)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (GPT-4)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Mistral AI
VITE_MISTRAL_API_KEY=your_mistral_api_key_here

# Groq (Ultra-fast)
VITE_GROQ_API_KEY=your_groq_api_key_here

# Other providers (optional)
VITE_DEEPSEEK_API_KEY=
VITE_XAI_API_KEY=
VITE_QWEN_API_KEY=
VITE_COHERE_API_KEY=

# ========================================
# IMAGE GENERATION PROVIDERS
# ========================================

VITE_STABILITY_API_KEY=
VITE_FLUX_API_KEY=
VITE_IDEOGRAM_API_KEY=

# ========================================
# VOICE / TTS PROVIDERS
# ========================================

VITE_ELEVENLABS_API_KEY=
VITE_DEEPGRAM_API_KEY=

# ========================================
# n8n AUTOMATION ENGINE
# ========================================

# n8n API Configuration (Headless Mode)
VITE_N8N_API_URL=http://localhost:5678/api/v1
VITE_N8N_API_KEY=internal_n8n_api_key

# n8n Webhook Endpoints (for workflow triggers)
VITE_N8N_WEBHOOK_BASE=http://localhost:5678/webhook

# ========================================
# WORKFLOW INTEGRATIONS
# ========================================

# Meta (Facebook/Instagram) API
VITE_META_ACCESS_TOKEN=
VITE_META_BUSINESS_ACCOUNT_ID=

# Twitter/X API
VITE_TWITTER_API_KEY=
VITE_TWITTER_API_SECRET=
VITE_TWITTER_BEARER_TOKEN=

# Firebase (for website deployment)
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_STORAGE_BUCKET=

# Resend (email sending)
VITE_RESEND_API_KEY=

# Google Maps (for lead discovery)
VITE_GOOGLE_MAPS_API_KEY=

# ========================================
# APPLICATION SETTINGS
# ========================================

# App Environment
VITE_APP_ENV=development

# API Base URL (for backend services)
VITE_API_BASE_URL=http://localhost:3000/api

# Enable Debug Mode
VITE_DEBUG_MODE=false

# ========================================
# ADVANCED OPTIONS (Optional)
# ========================================

# RLM (Recursive Language Model) Settings
VITE_RLM_MAX_DEPTH=5
VITE_RLM_CONTEXT_WINDOW=200000

# AI Model Preferences
VITE_DEFAULT_ROOT_MODEL=google
VITE_DEFAULT_RECURSIVE_MODEL=openai

# Workflow Timeout (ms)
VITE_WORKFLOW_TIMEOUT=90000

# Session Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_STORAGE_BACKEND=localStorage

# ========================================
# NOTES
# ========================================
#
# 1. Copy this file to .env.local and fill in your API keys
# 2. Never commit .env.local to version control
# 3. n8n must be running locally (http://localhost:5678) or point to your hosted instance
# 4. All workflow automation runs silently — users don't see n8n unless they're in Automations (Hunter tier)
# 5. Core DNA is fully white-labeled — no external branding exposed
#
